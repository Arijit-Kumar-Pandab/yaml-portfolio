---
import yaml from 'js-yaml';
import contactRaw from '../data/contact.yaml?raw';

const contact = yaml.load(contactRaw) as any;
---

<section id="contact" class="section contact-section">
  <div class="section-header">
    <h2 class="section-title">Get In Touch</h2>
    <div class="section-underline"></div>
  </div>
  <div class="contact-content">
    <p class="contact-message">{contact.message}</p>
    <p class="contact-availability">{contact.availability}</p>

    <div class="contact-info">
      <div class="contact-item">
        <span class="contact-icon">‚úâÔ∏è</span>
        <strong>Email</strong>
        <a href={`mailto:${contact.email}`}>{contact.email}</a>
      </div>
      <div class="contact-item">
        <span class="contact-icon">üìû</span>
        <strong>Phone</strong>
        <a href={`tel:${contact.phone}`}>{contact.phone}</a>
      </div>
      <div class="contact-item">
        <span class="contact-icon">üìç</span>
        <strong>Location</strong>
        <span>{contact.location}</span>
      </div>
    </div>

    <div class="contact-socials">
      {contact.social_links?.github && (
        <a href={contact.social_links.github} target="_blank" rel="noopener noreferrer" class="social-btn github">
          GitHub
        </a>
      )}
      {contact.social_links?.linkedin && (
        <a href={contact.social_links.linkedin} target="_blank" rel="noopener noreferrer" class="social-btn linkedin">
          LinkedIn
        </a>
      )}
      {contact.social_links?.twitter && (
        <a href={contact.social_links.twitter} target="_blank" rel="noopener noreferrer" class="social-btn twitter">
          Twitter
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .section {
    margin-bottom: 5rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 2.75rem;
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: 1rem;
    letter-spacing: -0.5px;
  }

  .section-underline {
    width: 120px;
    height: 5px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
    border-radius: 3px;
    margin: 0 auto;
    animation: expandWidth 0.6s ease;
  }

  @keyframes expandWidth {
    from {
      width: 0;
    }
    to {
      width: 120px;
    }
  }

  .contact-section {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.08), rgba(118, 75, 162, 0.08));
    padding: 3.5rem;
    border-radius: 16px;
    border: 1px solid var(--border-color);
  }

  html[data-theme='dark'] .contact-section {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.12), rgba(118, 75, 162, 0.12));
  }

  .contact-content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  .contact-message {
    font-size: 1.15rem;
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 1rem;
    letter-spacing: 0.3px;
  }

  .contact-availability {
    font-size: 1rem;
    color: var(--accent-primary);
    font-weight: 600;
    margin-bottom: 2.5rem;
  }

  .contact-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2.5rem;
  }

  .contact-item {
    background: var(--bg-primary);
    padding: 1.75rem;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .contact-item:hover {
    border-color: var(--accent-primary);
    box-shadow: 0 8px 24px rgba(102, 126, 234, 0.1);
    transform: translateY(-4px);
  }

  .contact-icon {
    font-size: 2rem;
  }

  .contact-item strong {
    display: block;
    color: var(--accent-primary);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .contact-item a,
  .contact-item span {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
  }

  .contact-item a:hover {
    color: var(--accent-primary);
    text-decoration: underline;
  }

  .contact-socials {
    display: flex;
    gap: 1.25rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .social-btn {
    display: inline-flex;
    align-items: center;
    padding: 0.875rem 1.75rem;
    background: var(--bg-primary);
    color: var(--accent-primary);
    border: 2px solid var(--accent-primary);
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .social-btn:hover {
    background: var(--accent-primary);
    color: white;
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
  }

  @media (max-width: 1024px) {
    .section {
      margin-bottom: 3.5rem;
    }

    .section-title {
      font-size: 2.25rem;
    }

    .contact-section {
      padding: 2.5rem;
    }

    .contact-message {
      font-size: 1.05rem;
    }

    .contact-info {
      gap: 1.5rem;
    }

    .contact-item {
      padding: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .section {
      margin-bottom: 2.5rem;
    }

    .section-title {
      font-size: 1.85rem;
    }

    .contact-section {
      padding: 1.75rem;
      border-radius: 12px;
    }

    .contact-message {
      font-size: 1rem;
      margin-bottom: 0.75rem;
    }

    .contact-availability {
      font-size: 0.9rem;
      margin-bottom: 1.75rem;
    }

    .contact-info {
      grid-template-columns: 1fr;
      gap: 1.25rem;
      margin-bottom: 1.75rem;
    }

    .contact-item {
      padding: 1.25rem;
    }

    .contact-icon {
      font-size: 1.75rem;
    }

    .contact-socials {
      gap: 0.75rem;
    }

    .social-btn {
      padding: 0.75rem 1.25rem;
      font-size: 0.85rem;
    }
  }
</style>

