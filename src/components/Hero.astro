---
import yaml from 'js-yaml';
import aboutRaw from '../data/about.yaml?raw';

const about = yaml.load(aboutRaw) as any;
---

<section id="hero" class="hero">
  <div class="hero-content">
    <div class="hero-avatar-wrap">
      <img
        class="hero-avatar"
        src="https://github.com/Arijit-Kumar-Pandab.png?s=460"
        alt={`${about.name} â€” avatar`}
        loading="lazy"
      />
    </div>

    <div class="hero-text">
      <h1 class="hero-title">{about.name}</h1>
      <p class="hero-role">{about.role}</p>
      <p class="hero-summary">{about.summary}</p>
    </div>
    <div class="hero-socials">
      {about.socials?.github && (
        <a href={about.socials.github} target="_blank" rel="noopener noreferrer" class="social-link primary">
          GitHub
        </a>
      )}
      {about.socials?.linkedin && (
        <a href={about.socials.linkedin} target="_blank" rel="noopener noreferrer" class="social-link secondary">
          LinkedIn
        </a>
      )}
      {about.socials?.twitter && (
        <a href={about.socials.twitter} target="_blank" rel="noopener noreferrer" class="social-link secondary">
          Twitter
        </a>
      )}
      {about.socials?.email && (
        <a href={`mailto:${about.socials.email}`} class="social-link secondary">
          Email
        </a>
      )}
    </div>
  </div>
  <div class="hero-decoration"></div>
</section>

<style>
  .hero {
    padding: 5rem 0;
    text-align: center;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.08), rgba(118, 75, 162, 0.08));
    border-radius: 16px;
    margin-bottom: 5rem;
    position: relative;
    overflow: hidden;
  }

  html[data-theme='dark'] .hero {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.12), rgba(118, 75, 162, 0.12));
  }

  .hero-decoration {
    position: absolute;
    top: -100px;
    right: -100px;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(102, 126, 234, 0.1), transparent);
    border-radius: 50%;
    pointer-events: none;
  }

  /* Avatar + reveal sequencing */
  .hero-avatar-wrap {
    display: block;
    margin-bottom: 1.5rem;
  }

  .hero-avatar {
    width: 160px;
    height: 160px;
    border-radius: 999px;
    object-fit: cover;
    display: block;
    margin: 0 auto;
    opacity: 0;
    transform: translateY(-8px) scale(0.98);
    transition: opacity 1.2s cubic-bezier(.2,.9,.2,1), transform 1.2s cubic-bezier(.2,.9,.2,1);
    border: 4px solid var(--bg-secondary);
    box-shadow: 0 12px 30px rgba(16,24,40,0.08);
  }

  /* Pause text animations until avatar loads */
  .hero-title,
  .hero-role,
  .hero-summary,
  .hero-socials {
    animation-play-state: paused;
    opacity: 0;
  }

  /* When avatar loaded, reveal avatar first then run text animations */
  .hero.is-loaded .hero-avatar {
    opacity: 1;
    transform: none;
  }

  .hero.is-loaded .hero-title,
  .hero.is-loaded .hero-role,
  .hero.is-loaded .hero-summary,
  .hero.is-loaded .hero-socials {
    animation-play-state: running;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
    padding: 0 2rem;
  }

  .hero-text {
    margin-bottom: 2.5rem;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 800;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    line-height: 1.1;
    letter-spacing: -1px;
    animation: slideInDown 0.8s ease;
  }

  @keyframes slideInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-role {
    font-size: 1.75rem;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
    margin-bottom: 1rem;
    animation: slideInUp 0.8s ease 0.1s both;
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-summary {
    font-size: 1.2rem;
    color: var(--text-secondary);
    line-height: 1.8;
    margin-bottom: 1rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeIn 0.8s ease 0.2s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .hero-socials {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeIn 0.8s ease 0.3s both;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    padding: 0.875rem 1.75rem;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid;
  }

  .social-link.primary {
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    color: white;
    border-color: transparent;
  }

  .social-link.primary:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
  }

  .social-link.secondary {
    color: var(--accent-primary);
    border-color: var(--accent-primary);
    background: transparent;
  }

  .social-link.secondary:hover {
    background: var(--accent-light);
    transform: translateY(-3px);
  }

  @media (max-width: 1024px) {
    .hero {
      padding: 3.5rem 0;
      margin-bottom: 3.5rem;
    }

    .hero-title {
      font-size: 3rem;
    }

    .hero-role {
      font-size: 1.4rem;
    }

    .hero-summary {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 2.5rem 0;
      margin-bottom: 2.5rem;
      border-radius: 12px;
    }

    .hero-title {
      font-size: 2.25rem;
    }

    .hero-role {
      font-size: 1.1rem;
    }

    .hero-summary {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .hero-socials {
      gap: 0.75rem;
    }

    .social-link {
      padding: 0.75rem 1.25rem;
      font-size: 0.9rem;
    }
  }
</style>

